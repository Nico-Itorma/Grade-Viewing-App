<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nicanoritorma.gradeview">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.GradeView"
        android:usesCleartextTraffic="true">

        <activity android:name=".Activity_ViewGradeByStudent"
            android:parentActivityName=".MainActivity" />

        <activity
            android:name=".gettingStarted.PasswordReset"
            android:parentActivityName=".MainActivity" />

        <activity
            android:name=".Activity_Student_Grades"
            android:parentActivityName=".Activity_StudentList_in_Course" />

        <activity
            android:name=".Activity_AddStudent"
            android:parentActivityName=".Activity_StudentList_in_Course" />

        <activity
            android:name=".Activity_StudentList_in_Course"
            android:parentActivityName=".MainActivity" />

        <activity
            android:name=".Activity_AddCourse"
            android:parentActivityName=".MainActivity" />

        <activity android:name=".gettingStarted.SignupActivity" />

        <activity android:name=".MainActivity" />

        <activity android:name=".gettingStarted.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>